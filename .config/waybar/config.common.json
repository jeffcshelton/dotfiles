{
  "exclusive": true,
  "height": 40,
  "layer": "top",
  "mod": "dock",
  "passthrough": false,
  "position": "top",

  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["󱊡 ", "󱊢 ", "󱊣 "]
  },

  "bluetooth": {
    "format": " {status}",
    "format-connected": " {num_connections}",
    "format-disabled": "󰂲 ",
    "on-click": "overskride",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": " {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}"
  },

  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip-format": "{:%A\n$F}"
  },

  "cpu": {
    "format": "  {usage}%",
    "interval": 1
  },

  "hyprland/window": {
    "format": "{}",
    "max-length": 40
  },

  "hyprland/workspaces": {
    "all-outputs": true,
    "disable-scroll": true,
    "on-click": "activate"
  },

  "memory": {
    "format": "  {}%",
    "interval": 1,
    "tooltip": true,
    "tooltip-format": "RAM: {used} / {total} GiB\nSwap: {swapUsed} / {swapTotal} GiB"
  },

  "network": {
    "format-disconnected": "󰖪 ",
    "format-ethernet": "󰈀 ",
    "format-link": " ",
    "format-wifi": "󰖩  {signalStrength}%",
    "tooltip-format": "{essid} - {ifname} via {gwaddr}"
  },

  "wireplumber": {
    "format": "{icon} {volume}",
    "format-icons": {
      "headphone": " ",
      "hands-free": " ",
      "headset": " ",
      "phone": " ",
      "portable": " ",
      "car": " ",
      "default": [" ", " ", " "]
    },
    "format-muted": "󰝟 ",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+",
    "scroll-step": 5,
    "tooltip": false
  }
}
